{
  "name": "coding-dojo-template",
  "version": "1.0.0",
  "engines": { 
    "node" : ">=8.5.0" 
  },
  "description": "A boilerplate project for coding dojo in TypeScript language",
  "main": "src/Dojo/index.js",
  "scripts": {
    "tsc": "./node_modules/.bin/tsc",
    "tsc:watch": "./node_modules/.bin/tsc --watch",
    "test": "tsc && ava --verbose",
    "test:watch": "./node_modules/.bin/ava --watch --verbose"
  },
  "ava": {
    "files": [
      "dist/tests/**/*Test.js"
    ],
    "sources": [
      "dist/src/**/*.js"
    ]
  },
  "author": "khytsky.vladimir@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "9.6.1",
    "ava": "1.0.0-beta.3",
    "typescript": "2.8.1"
  }
}
